{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "hlasm",
  "fileTypes": [
    "hlasm",
    "asm",
    "mac",
    "mlc"
  ],
  "patterns": [
    {
      "include": "#todo"
    },
    {
      "include": "#comment"
    },
    {
      "include": "#directive.single.strings"
    },
    {
      "include": "#hex.strings"
    },
    {
      "include": "#hex.strings.invalid"
    },
    {
      "include": "#double.strings"
    },
    {
      "include": "#single.strings"
    },
    {
      "include": "#label"
    },
    {
      "include": "#instructions"
    },
    {
      "include": "#branch_instructions"
    },
    {
      "include": "#directives"
    },
    {
      "include": "#parameters"
    },
    {
      "include": "#registers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#macros"
    }
  ],
  "repository": {
    "comment": {
      "patterns": [
        {
          "match": "^(\\*.{,71})|(^\\.\\*.{,70})",
          "name": "comment.hlasm"
        }
      ]
    },
    "double.strings": {
      "begin": "\"",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.string.begin.hlasm"
        }
      },
      "end": "(\"|$)",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.string.end.hlasm"
        }
      },
      "name": "string.quoted.double.hlasm"
    },
    "directive.single.strings": {
      "match": "(?i:title\\s+)('.*')",
      "captures": {
        "0": {
          "name": "keyword.other.hlasm"
        },
        "1": {
          "name": "string.directive.hlasm"
        }
      }
    },
    "hex.strings": {
      "match": "([nN][xX]|[hHxX])'\\h*'",
      "name": "constant.numeric.integer.hexadecimal.hlasm"
    },
    "hex.strings.invalid": {
      "match": "([nN][xX]|[hHxX])'.*'",
      "name": "invalid.illegal.hexadecimal.hlasm"
    },
    "single.strings": {
      "match": "\\s('.*')",
      "name": "string.hlasm"
    },
    "label": {
      "patterns": [
        {
          "match": "(^[0-9a-z@A-Z$#_]+)",
          "name": "entity.name.section.hlasm"
        }
      ]
    },
    "instructions": {
      "patterns": [
        {
          "match": "^(\\b|\\s+)(?i:a|ah|al|alr|ap|ar|bal|balr|bas|basm|bassm|bc|bcr|bctr|bsm|bxh|bxle|c|cds|ch|cl|clc|clcl|cli|clm|clr|cp|cr|cs|cvb|cvd|d|dp|dr|ed|edmk|ex|ic|icm|ipm|l|la|lcr|lh|lm|lnr|lpr|lr|ltr|m|mh|mp|mr|mvc|mvcin|mvcl|mvi|mvn|mvo|mvz|n|nc|ni|nr|o|oc|oi|or|pack|s|sh|sl|sla|slda|sldl|sll|slr|sp|sr|sra|srda|srdl|srl|srp|st|stb|stc|spm|stcm|sth|stm|svc|tm|tr|trt|unpk|x|xc|xi|xr|zap)\\b",
          "name": "keyword.hlasm"
        }
      ]
    },
    "registers": {
      "patterns": [
        {
          "match": "\\b(?i:r0|r1|r2|r3|r4|r5|r6|r7|r8|r9|r10|r11|r12|r13|r14|r15)(\\b|,)",
          "name": "keyword.hlasm"
        }
      ]
    },
    "branch_instructions": {
      "patterns": [
        {
          "match": "^(\\b|\\s+)(?i:b|bct|be|ber|bh|bhr|bl|blr|bm|bmr|bne|bner|bnh|bnhr|bnl|bnlr|bnm|bnmr|bno|bnor|bnp|bnpr|bnz|bnzr|bo|bor|bor|bp|bpr|br|bz|bz|bzr|nop|nopr)\\b",
          "name": "keyword.control.hlasm"
        }
      ]
    },
    "directives": {
      "patterns": [
        {
          "match": "\\b(?i:amode|com|copy|csect|dc|ds|drop|dsect|eject|end|entry|equ|ltorg|macro|mend|mexit|mnote|org|print|rmode|space|start|title|using)\\b",
          "name": "keyword.other.hlasm"
        }
      ]
    },
    "parameters": {
      "patterns": [
        {
          "match": "\\b(?i:blksize|dcb|ddname|dsorg|eodad|gen|id|lrecl|lv|macrf|nogen|pdata|recfm|record|ru|storage)\\b",
          "name": "variable.parameter.hlasm"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "match": "\\b(?i:and:eq:ge:gt:le:lt:ne:not:or)\\b",
          "name": "keyword.operator.hlasm"
        }
      ]
    },
    "macros": {
      "patterns": [
        {
          "match": "^(\\b|\\s+)(?i:actr|ago|aif|anop|chau|close|dcb|gbla|gblb|gblc|get|lcla|lclb|lclc|open|ppio|put|read|seta|setb|setc|snap|write|wto|wtor|wtorpc)",
          "name": "entity.name.function.hlasm"
        }
      ]
    },
    "todo": {
      "patterns": [
        {
          "match": "(^\\*)(:(?i:todo):)(.{,63})",
          "captures": {
            "1": {
              "name": "comment.line.todo.hlasm"
            },
            "2": {
              "name": "token.warning.hlasm"
            },
            "3": {
              "name": "comment.line.hlasm"
            }
          }
        }
      ]
    },
    "comment35plus": {
      "patterns": [
        {
          "match": "(^.{34,34}?)(.{37,37})",
          "captures": {
            "1": {
              "patterns": [
                {
                  "include": "#label"
                },
                {
                  "include": "#instructions"
                }
              ]
            },
            "2": {
              "name": "comment.hlasm"
            }
          }
        }
      ]
    }
  },
  "scopeName": "source.hlasm"
}